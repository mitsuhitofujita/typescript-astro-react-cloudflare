---
// Astroコンポーネントのフロントマター
import ReactGreeting from "../components/ReactGreeting";
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Astro + React Hello World</title>
		<style>
			body {
				font-family: system-ui, sans-serif;
				margin: 0;
				padding: 2rem;
				background-color: #f5f5f5;
			}
			.container {
				max-width: 800px;
				margin: 0 auto;
				padding: 2rem;
				background-color: white;
				border-radius: 8px;
				box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
			}
			.astro-section {
				margin-bottom: 2rem;
				padding: 1.5rem;
				background-color: #f0f7ff;
				border-radius: 6px;
			}
			.react-island {
				margin-top: 2rem;
				padding: 1.5rem;
				background-color: #f5fff0;
				border-radius: 6px;
				border: 1px solid #d0e8c0;
			}
			button {
				background-color: #4c8ffc;
				color: white;
				border: none;
				padding: 0.5rem 1rem;
				border-radius: 4px;
				cursor: pointer;
			}
			button:hover {
				background-color: #3a70d0;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<h1>Astro + React Hello World</h1>

			<div class="astro-section">
				<h2>This is an Astro Section 🚀</h2>
				<p>このコンテンツは静的にレンダリングされます</p>
			</div>

			<!-- クライアントサイドでhydrateするReactコンポーネント -->
			<ReactGreeting client:load />
		</div>
	</body>
</html>
